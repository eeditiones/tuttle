<?xml version="1.0" encoding="UTF-8"?>
<project default="all" name="tuttle">
  <description>Tuttle Git integration for eXist-db</description>
  <xmlproperty file="src/expath-pkg.xml"/>
  <property name="project.version" value="${package(version)}"/>
  <property name="project.app" value="tuttle"/>
  <property name="build.dir" value="build"/>
  <!-- Start it -->
  <target name="init" description="create build directory">
    <tstamp/>
    <mkdir dir="${build.dir}"/>
  </target>
  <!-- Dev build (includes everything unoptimized) -->
  <target name="all" depends="init" description="compile all source files">
    <zip basedir="." destfile="${build.dir}/${project.app}-${project.version}.xar" excludes="**/${build.dir}/**, **/node_modules/**"/>
  </target>
</project>
