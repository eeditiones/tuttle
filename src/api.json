           "/git/status":{
            "get": {
                "summary": "Get Tuttle configuration",
                "x-constraints": {
                    "user": "admin"
                },
                "operationId": "api:get-status",
                "responses": {
                    "200": {
                        "description": "GIT status",
                        "content": {
                            "application/xml":{
                            	"schema": {
                                    "type": "object",
                                    "xml" : {
                                    	"name" : "tuttle"
                                    },
                                    "properties": {
                                        "default":{
                                            "type": "string"
                                        },
                                        "repos":{
                                            "type": "object",
                                            "properties": {
                                            	"repo": {
                                            		"type": "array",
                                            		"items": {
                                            			"type": "object",
	                                            		"properties": {
                                            				"type": {
                                            					"type": "string"
                                            				},
                                            				"url": {
                                            					"type": "string"
                                        					},
                                        				 	"ref": {
                                            					"type": "string"
                                            				},
                                        				   	"collection": {
                                        		   				"type": "string"
                                        				   	},
															"status": {
                                        				 		"type": "string"
                                    					   	},
                                                            "message": {
                                                                "type": "string"
                                                            }
														} 
                                            		}
												}
											}
                        	            }
                                    }
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "default":{
                                            "type": "string"
                                        },
                                        "repos":{
                                            "type": "object",
                                            "properties": {
                                            	"repo": {
                                            		"type": "array",
                                            		"items": {
                                            			"type": "object",
	                                            		"properties": {
                                            				"type": {
                                            					"type": "string"
                                            				},
                                            				"url": {
                                            					"type": "string"
                                        					},
                                        				 	"ref": {
                                            					"type": "string"
                                            				},
                                        				   	"collection": {
                                        		   				"type": "string"
                                                            },
															"status": {
